{
  "name": "lodgify-mcp",
  "version": "0.1.0",
  "description": "Model Context Protocol server for Lodgify Public API v2 - Expose Lodgify endpoints as MCP tools for AI assistants",
  "type": "module",
  "main": "dist/server.js",
  "bin": {
    "lodgify-mcp": "dist/server.js"
  },
  "files": [
    "dist/",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "scripts": {
    "dev": "tsx src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "test:coverage": "bun test --coverage",
    "lint": "biome check .",
    "format": "biome format --write .",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "mcp",
    "modelcontextprotocol",
    "lodgify",
    "api",
    "property-management",
    "vacation-rental",
    "booking",
    "hospitality",
    "ai-tools",
    "claude"
  ],
  "author": "Your Name",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mikerobgit/lodgify-mcp.git"
  },
  "bugs": {
    "url": "https://github.com/mikerobgit/lodgify-mcp/issues"
  },
  "homepage": "https://github.com/mikerobgit/lodgify-mcp#readme",
  "engines": {
    "node": ">=18",
    "bun": ">=1.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.17.3",
    "dotenv": "^17.2.1",
    "pino": "^9.9.0",
    "pino-pretty": "^13.1.1",
    "zod": "3.25.76"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.0",
    "@types/bun": "^1.2.20",
    "@types/node": "^24.2.1",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2"
  }
}
