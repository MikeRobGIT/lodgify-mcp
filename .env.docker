# Docker-specific environment defaults
# These values are used when running the MCP server in Docker
# Override these in your .env file or docker-compose.override.yml

# Server Configuration
NODE_ENV=production
DOCKER_PORT=3000

# Logging Configuration for Docker
LOG_LEVEL=info
DEBUG_HTTP=0

# Health Check Configuration
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_PATH=/health

# Docker-specific paths (if needed for future features)
CONFIG_PATH=/app/config
DATA_PATH=/app/data

# Performance tuning for container environment
MAX_WORKERS=2
REQUEST_TIMEOUT=30000

# Note: LODGIFY_API_KEY must be set in your main .env file or passed via Docker secrets