# Lodgify MCP Server Configuration
LODGIFY_API_KEY="your_lodgify_api_key_here"           # Required: Your Lodgify API key

# Read/Write Mode Configuration
LODGIFY_READ_ONLY="false"                             # Options: "true" | "false" | "1" | "0"
                                                      # true: Blocks all write operations (safe mode)
                                                      # false: Allows booking creation, updates, deletions

# Server Configuration
NODE_ENV="production"                                 # Options: development | production
DOCKER_PORT="3000"                                    # Port for Docker container (default: 3000)
HTTP_PORT="3000"                                      # HTTP server port (for OAuth mode)
HTTP_HOST="localhost"                                 # HTTP server host
BASE_URL="http://localhost:3000"                      # Base URL for OAuth callbacks

# Logging Configuration
LOG_LEVEL="info"                                      # Options: error | warn | info | debug
DEBUG_HTTP="0"                                        # Set to "1" to enable verbose HTTP debugging

# Authentication Configuration
AUTH_MODE="bearer"                                    # Options: bearer | oauth | dual | none
                                                      # bearer: Simple token authentication (default)
                                                      # oauth: OAuth 2.1 with PKCE
                                                      # dual: Support both authentication methods
                                                      # none: No authentication (development only)

# Bearer Token Authentication (for bearer or dual mode)
MCP_TOKEN="your-secret-token-here-minimum-32-chars"   # Legacy bearer token (backward compatible)
# AUTH_BEARER_TOKEN="your-secret-token-here"          # Alternative: new bearer token variable

# OAuth Configuration (for oauth or dual mode)
# OAUTH_PROVIDER="google"                             # Options: google | github | auth0 | keycloak | custom
# OAUTH_CLIENT_ID="your-oauth-client-id"              # OAuth client ID from provider
# OAUTH_CLIENT_SECRET="your-oauth-client-secret"      # OAuth client secret from provider
# OAUTH_SCOPES="openid profile email"                 # Space-separated list of OAuth scopes

# Provider-Specific OAuth Configuration
# For Google: No additional config needed
# 
# For GitHub: No additional config needed
#
# For Auth0:
# OAUTH_DOMAIN="your-tenant.auth0.com"                # Your Auth0 domain
# OAUTH_AUDIENCE="https://your-api-identifier"        # Optional: API identifier for Auth0
#
# For Keycloak:
# OAUTH_BASE_URL="http://localhost:8080"              # Keycloak server URL
# OAUTH_REALM="your-realm"                            # Keycloak realm name
#
# For Custom Provider:
# OAUTH_AUTH_URL="https://provider.com/authorize"     # Authorization endpoint
# OAUTH_TOKEN_URL="https://provider.com/token"        # Token endpoint
# OAUTH_JWKS_URL="https://provider.com/jwks.json"     # JWKS endpoint for token validation
# OAUTH_ISSUER="https://provider.com"                 # Token issuer
# OAUTH_DISCOVERY_URL="https://provider.com/.well-known/openid-configuration"

# Session Configuration (recommended for OAuth)
# SESSION_SECRET="your-session-secret-minimum-32-chars" # Secret for session encryption
# TRUST_PROXY="false"                                   # Set to true if behind a proxy/load balancer
