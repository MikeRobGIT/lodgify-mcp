# Lodgify MCP Server Configuration
LODGIFY_API_KEY="your_lodgify_api_key_here"           # Required: Your Lodgify API key

# Read/Write Mode Configuration
LODGIFY_READ_ONLY="false"                             # Options: "true" | "false" | "1" | "0"
                                                      # true: Blocks all write operations (safe mode)
                                                      # false: Allows booking creation, updates, deletions

# Server Configuration
NODE_ENV="production"                                 # Options: development | production
DOCKER_PORT="3000"                                    # Port for Docker container (default: 3000)

# Logging Configuration
LOG_LEVEL="info"                                      # Options: error | warn | info | debug
DEBUG_HTTP="0"                                        # Set to "1" to enable verbose HTTP debugging